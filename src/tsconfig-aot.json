{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "../dist",
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },

  "include": [
    "./app/ng2wig/ng2wig.module.ts"
  ],

  "exclude": [
    "../node_modules"
  ],

  "angularCompilerOptions": {
    "skipMetadataEmit" : false
  }
}
