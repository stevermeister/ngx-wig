{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
      "es2016.array.include"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../../out-tsc/es5",
    "sourceMap": false,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "include":["app/ng2wig/ng2wig.module.ts"],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "annotateForClosureCompiler": true,
    "flatModuleOutFile": "ng2wig.js",
    "flatModuleId": "ng2wig"
  }
}
